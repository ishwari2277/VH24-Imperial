    <script src="/javascripts/annyang.min.js"></script>
    <script>
        if (annyang) {
            // Commands for voice input
            const commands = {
                // Write Full Name
                'enter full name *tag': function (variable) {
                    let fullName = document.getElementById("fullName");
                    fullName.value = variable;
                    speak('Now enter the relationship to user');
                },
                // Write Relationship to User
                'enter relationship to user *tag': function (variable) {
                    let relationshipToUser = document.getElementById("relationshipToUser");
                    relationshipToUser.value = variable;
                    speak('Now enter your age');
                },
                // Write Age
                'enter age *tag': function (variable) {
                    let age = document.getElementById("age");
                    age.value = variable;
                    speak('Now enter your occupation');
                },
                // Write Occupation
                'enter occupation *tag': function (variable) {
                    let occupation = document.getElementById("occupation");
                    occupation.value = variable;
                    speak('Now enter your annual income');
                },
                // Write Annual Income
                'enter annual income *tag': function (variable) {
                    let annualIncome = document.getElementById("annualIncome");
                    annualIncome.value = variable;
                    speak('Now enter your total medical expenses');
                },
                // Write Total Medical Expenses
                'enter total medical expenses *tag': function (variable) {
                    let medicalExpenses = document.getElementById("medicalExpenses");
                    medicalExpenses.value = variable;
                    speak('Now enter your lifestyle expenses');
                },
                // Write Lifestyle Expenses
                'enter lifestyle expenses *tag': function (variable) {
                    let lifestyleExpenses = document.getElementById("lifestyleExpenses");
                    lifestyleExpenses.value = variable;
                    speak('Now select your risk profiling');
                },
                // Select Risk Profiling
                'select risk profiling *tag': function (variable) {
                    let riskProfiling = document.getElementById("riskProfiling");
                    riskProfiling.value = variable.charAt(0).toUpperCase() + variable.slice(1).toLowerCase(); // Capitalize first letter
                    speak('Now enter your investment goals');
                },
                // Write Investment Goals
                'enter investment goals *tag': function (variable) {
                    let investmentGoals = document.getElementById("investmentGoals");
                    investmentGoals.value = variable;
                    speak('Now enter your current investments');
                },
                // Write Current Investments
                'enter current investments *tag': function (variable) {
                    let currentInvestments = document.getElementById("currentInvestments");
                    currentInvestments.value = variable;
                    speak('Form complete. You can now submit.');
                },
            };

            // Add commands to Annyang
            annyang.addCommands(commands);

            // Start listening for voice commands
            annyang.start();

            // Speech function
            function speak(text) {
                const msg = new SpeechSynthesisUtterance(text);
                window.speechSynthesis.speak(msg);
            }

            // Speak on page load
            function onPageLoadSpeak() {
                setTimeout(() => {
                    speak('Please enter your full name');
                }, 1000);
            }

            // Call function to speak on page load
            onPageLoadSpeak();

        } else {
            console.log('Annyang is not supported in this browser.');
        }
    </script>






