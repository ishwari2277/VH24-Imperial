<div class="model">
    <!-- Login modal -->
    <div id="login-modal">
      <!-- Login Form -->
      <div class="login-form default-form">
        <div class="form-inner">
          <h3>Create a Free Nivesh Account</h3>
  
          <!--Login Form-->
          <% if (message.length > 0) { %>
            <div class="alert alert-danger">
              <%= message %>
            </div>
          <% } %>
          <form method="post" action="/register">
            <div class="form-group">
              <label>Username</label>
              <input type="text" minlength="4" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
              <label>Email Address</label>
              <input type="email" name="email" placeholder="Email" required>
            </div>
  
            <div class="form-group">
              <label>Password</label>
              <input id="password-field" minlength="6" type="password" name="password" value="" placeholder="Password">
            </div>
  
            <div class="form-group">
              <button class="theme-btn btn-style-one " type="submit" name="Register">Register</button>
            </div>
          </form>
          <!-- <div class="bottom-box">
            <div class="divider"><span>or</span></div>
            <div class="text">Already have an account? <a href="/login" class="call-modal">Login</a></div>
          </div> -->
        </div>
      </div>
      <!--End Login Form -->
    </div>
    <!-- End Login Module -->

  </div>